<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_math"
    tools:context="com.example.hp.mathematics.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/general_btn"
        android:src="@drawable/general_math"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="50dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/algebra_btn"
        android:src="@drawable/algebra_math"
        android:background="#00000000"
        android:layout_alignTop="@+id/general_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:paddingRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="সাধারণ গণিত"
        android:id="@+id/textView_general"
        android:layout_below="@+id/general_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingLeft="35dp"
        android:paddingTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="বীজগণিত"
        android:id="@+id/textView_algebra"
        android:layout_below="@+id/algebra_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="50dp"
        android:paddingTop="4dp"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geometry_btn"
        android:src="@drawable/geometry_math"
        android:background="#00000000"
        android:layout_below="@+id/textView_general"
        android:layout_alignRight="@+id/general_btn"
        android:layout_alignEnd="@+id/general_btn"
        android:paddingTop="20dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trikonomiti_btn"
        android:src="@drawable/calculas_math"
        android:background="#00000000"
        android:layout_alignTop="@+id/geometry_btn"
        android:layout_alignLeft="@+id/textView_algebra"
        android:layout_alignStart="@+id/textView_algebra"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="জ্যামিতি"
        android:id="@+id/textView_geometry"
        android:layout_below="@+id/geometry_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingLeft="50dp"
        android:paddingTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ত্রিকোণমিতি"
        android:id="@+id/textView_trikonomiti"
        android:layout_below="@+id/trikonomiti_btn"
        android:layout_alignRight="@+id/textView_algebra"
        android:layout_alignEnd="@+id/textView_algebra"
        android:textColor="#ffffff"
        android:paddingRight="40dp"
        android:paddingTop="4dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculas_btn"
        android:src="@drawable/calculas_math"
        android:background="#00000000"
        android:layout_below="@+id/textView_geometry"
        android:layout_alignRight="@+id/textView_geometry"
        android:layout_alignEnd="@+id/textView_geometry"
        android:paddingTop="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statistics_btn"
        android:src="@drawable/statistics_math"
        android:background="#00000000"
        android:layout_alignTop="@+id/calculas_btn"
        android:layout_alignLeft="@+id/trikonomiti_btn"
        android:layout_alignStart="@+id/trikonomiti_btn"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ক্যালকুলাস"
        android:id="@+id/textView_calculas"
        android:layout_below="@+id/calculas_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingLeft="40dp"
        android:paddingTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="পরিসংখ্যান"
        android:id="@+id/textView_statistics"
        android:layout_below="@+id/statistics_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:paddingRight="45dp"
        android:paddingTop="4dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advanced_btn"
        android:src="@drawable/advanced_math"
        android:background="#00000000"
        android:layout_below="@+id/textView_calculas"
        android:layout_alignLeft="@+id/calculas_btn"
        android:layout_alignStart="@+id/calculas_btn"
        android:paddingTop="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/others_btn"
        android:src="@drawable/many_math"
        android:background="#00000000"
        android:layout_below="@+id/textView_statistics"
        android:layout_alignLeft="@+id/statistics_btn"
        android:layout_alignStart="@+id/statistics_btn"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="উন্নত বিষয়াবলী"
        android:id="@+id/textView_advanced"
        android:layout_below="@+id/advanced_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:paddingLeft="28dp"
        android:paddingTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="বিবিধ"
        android:id="@+id/textView_others"
        android:layout_below="@+id/others_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:paddingRight="70dp"
        android:paddingTop="4dp"/>


</RelativeLayout>
